{
  "name": "dashboard-poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run json-server\"",
    "dev:next": "next dev",
    "json-server": "json-server --watch src/mocks/db.json --port 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:visual": "playwright test visual.spec.ts",
    "test:api": "playwright test api.spec.ts",
    "test:dashboard": "playwright test dashboard.spec.ts",
    "test:tables": "playwright test alerts.spec.ts beacons.spec.ts users.spec.ts users-firmware.spec.ts",
    "test:users": "playwright test users.spec.ts users-firmware.spec.ts",
    "test:security": "playwright test security-performance.spec.ts --grep='Security Tests'",
    "test:performance": "playwright test security-performance.spec.ts --grep='Performance Tests'",
    "test:scalability": "playwright test security-performance.spec.ts --grep='Scalability Tests'",
    "test:install": "playwright install",
    "docker:build": "docker build -t dashboard-poc .",
    "docker:run": "docker run -p 3000:3000 dashboard-poc",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.6",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/container-queries": "^0.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "json-server": "^1.0.0-beta.3",
    "lucide-react": "^0.534.0",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
